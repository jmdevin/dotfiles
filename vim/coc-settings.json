{
    "flutter.lsp.initialization.onlyAnalyzeProjectsWithOpenFiles": false,
    "python.autoComplete.addBrackets": true,
    // "python.formatting.provider": "none",
    "python.jediEnabled": false,
    "python.analysis.diagnosticEnabled": true,
    // "python.linting.enabled": false,
    "suggest.enablePreselect": false,
    "suggest.labelMaxLength": 45,
    "suggest.detailMaxLength": 80,
    "suggest.detailField": "preview",
    "suggest.maxCompleteItemCount": 200,
    "suggest.fixInsertedWord": false,
    "suggest.timeout": 3000,
    "suggest.triggerCompletionWait": 200,
    "suggest.lowPrioritySourceLimit": 5,
    "coc.source.around.enable": true,
    "coc.source.around.priority": 3,
    "coc.source.around.firstMatch": true,
    "coc.source.buffer.enable": false,
    "coc.source.buffer.priority": 1,
    "coc.source.buffer.firstMatch": true,
    "coc.source.buffer.ignoreGitignore": true,
    "coc.source.file.enable": true,
    "coc.source.file.priority": 2,
    "suggest.completionItemKindLabels": {
        "keyword": "keywd",
        "variable": "var",
        "value": "value",
        "operator": "oper",
        "function": "func",
        "reference": "ref",
        "constant": "const",
        "method": "method",
        "struct": "struct",
        "class": "class",
        "text": "text",
        "enum": "enum",
        "enumMember": "enm_mb",
        "module": "module",
        "color": "color",
        "property": "prop",
        "field": "field",
        "unit": "unit",
        "event": "event",
        "file": "file",
        "folder": "dir",
        "snippet": "snip",
        "typeParameter": "param",
        "default": "defalt"
    },
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableSign": false,
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.locationlist": false,
    // "diagnostic.errorSign": "ee",
    // "diagnostic.warningSign": "ww",
    // "diagnostic.infoSign": "ii",
    // "diagnostic.hintSign": "hh",
    "signature.triggerSignatureWait": 250,
    "signature.maxWindowHeight": 15,
    "list.maxHeight": 15,
    "coc.preferences.extensionUpdateCheck": "never",
    // "coc.preferences.hoverTarget": "float",
    // "coc.preferences.previewAutoClose": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.bracketEnterImprove": false,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"]
            // "ignoredRootPaths": ["~"]
        },
        "clangd": {
            "command": "clangd",
            // "args": ["--background-index", "--clang-tidy", "--completion-style=detailed", "--header-insertion=iwyu", "--header-insertion-decorators", "--limit-results=0", "--suggest-missing-includes", "--all-scopes-completion"],
            // "args": ["--all-scopes-completion", "--background-index", "--clang-tidy", "--completion-style=detailed", "--limit-results=0", "--suggest-missing-includes"],
            // "args": ["--all-scopes-completion", "--background-index", "--limit-results=0", "--suggest-missing-includes"],
            "args": ["--background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    }
}
