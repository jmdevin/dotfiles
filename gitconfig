[alias]
    llog = log --all --graph
    mlog = log --branches --remotes --tags --graph --decorate --notes HEAD
    olog = log --branches --remotes --tags --graph --decorate --notes --oneline HEAD
    slog = log --all --graph --stat
    mst = status --short --branch
    mbr = branch -a -vv
[cola]
	savewindowsettings = false
	spellcheck = false
[commit]
	verbose = true
[core]
	excludesfile = /home/john/.gitignore_global
[diff]
    algorithm = histogram
	indentHeuristic = true
    tool = vimdiff3
[merge]
	conflictStyle = diff3
	tool = vimdiff3
